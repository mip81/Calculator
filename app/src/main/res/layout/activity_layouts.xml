<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="calc.mip.nz.layoutstest.MainActivity"
    android:background="#FFFF00"
    android:orientation="vertical"
    android:weightSum="1">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e5f697">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="This is FrameLayout click to go back"
            android:id="@+id/button14"
            android:layout_gravity="left|top"
            android:onClick="goBack" />
    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This the root LinearLayout (vertical)"
        android:textColor="#000000"
        android:textAlignment="center"
        android:id="@+id/textView6" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:background="#fbcfcf">


        <TextView
            android:layout_width="281dp"
            android:layout_height="wrap_content"
            android:text="This TextView in LinearLayouts(Horizontal)"
            android:id="@+id/textView"
            android:textAlignment="center" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="BTN"
            android:id="@+id/btnLV1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f0ffc4">

        <TextView
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:text="This TextView in LinearLayouts(Vertical)"
            android:id="@+id/textView3"
            android:textAlignment="center" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="BTN"
            android:id="@+id/btnLV2"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:orientation="horizontal"
        android:background="#b1fdbe">


        <TextView
            android:text="TextView in TableLayout without TableRow"
            android:id="@+id/textView5"
            android:layout_height="34dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button in TableLayout without TableRow"
            android:id="@+id/button" />

    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="#f98b59">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:text="This is TableLayout with several rows"
                android:id="@+id/textView7"
                android:textAlignment="center"
                android:layout_column="0"
                android:layout_span="2" />
        </TableRow>

        <TableRow
            android:layout_width="30dp"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnFR1"
                android:text="First row button 1"
                android:layout_width="wrap_content" />
            <Button
                android:id="@+id/btnFR2"
                android:text="First row button 2"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnsSR1"
                android:text="First row button 3"
                android:layout_width="wrap_content" />
            <Button
                android:id="@+id/btnSR2"
                android:text="First row button 4"
                />

        </TableRow>


    </TableLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:columnCount="2"
        android:rowCount="2"
        android:background="#9ea2fb">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="This is TextView in GridLayout"
            android:id="@+id/tvGL"
            android:textAlignment="center"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_rowSpan="1"
            android:layout_columnSpan="2" />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="BTN GridLayout 1"
            android:id="@+id/btnGL1"
            android:layout_row="1"
            android:layout_column="0"
            android:focusable="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="BTN GridLayout 2"
            android:id="@+id/btnGL2"
            android:layout_row="1"
            android:layout_column="1" />


    </GridLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#f7b5e5">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="This is TextView in RelativeLayout"
            android:id="@+id/txtView"
            android:textAlignment="center"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_rowSpan="1"
            android:layout_columnSpan="2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" BTN RELATIVE 1"
            android:id="@+id/bnt"
            android:layout_below="@+id/txtView"
            android:layout_alignParentStart="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BTN RELATIVE 2"
            android:id="@+id/btnRL1"
            android:layout_below="@+id/btnRL2"
            android:layout_alignParentEnd="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BTN RELATIVE 3"
            android:id="@+id/btnRL2"
            android:layout_below="@+id/bnt"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>



</LinearLayout>
