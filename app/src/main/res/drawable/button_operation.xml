<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient android:startColor="#ce6e00" android:endColor="#d29c5d" android:angle="270" />
            <stroke android:width="1dp" android:color="#d29c5d" />
            <corners android:radius="3dp" />
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
        </shape>


    </item>
    <item android:state_focused="true" >
        <shape>
            <gradient android:startColor="#ce6e00" android:endColor="#d29c5d" android:angle="270" />
            <stroke android:width="1dp" android:color="#d29c5d" />
            <corners android:radius="3dp" />
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
        </shape>

    </item>
    <item>
        <shape>

            <gradient android:startColor="#ffff8800" android:endColor="#ffbd71" android:angle="270" />
            <stroke android:width="1dp" android:color="#ffbd71" />
            <corners android:radius="3dp" />
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>
</selector>
